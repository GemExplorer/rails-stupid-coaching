<h1>Stupid Coaching</h1>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <%= form_tag("/answer", method: "get", class: "border p-4 rounded-3 shadow-sm") do %>
        <h3 class="mb-4">Ask your coach anything:</h3>
        <div class="input-group mb-3">
          <%= text_field_tag(:question, nil, class: "form-control", placeholder: "Enter your question here...") %>
          <button class="btn btn-primary" type="submit">Ask!</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
